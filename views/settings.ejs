<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Settings</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
      }
      nav {
        background-color: #2c3e50;
        color: white;
        padding: 15px 25px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      nav h1 {
        font-size: 24px;
      }

      .nav-actions {
        display: flex;
        gap: 10px;
      }

      .dashboard-link {
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
      }

      .logout-link {
        color: white;
        text-decoration: none;
        font-size: 16px;
        transition: background-color 0.3s ease;
      }

      .logout-link:hover {
        background-color: #c0392b;
      }

      .logout-link:focus {
        outline: none;
      }
      form {
        max-width: 600px;
        margin: 30px auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      label {
        display: block;
        font-size: 16px;
        margin-bottom: 8px;
        color: #333;
      }
      input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
      }
      button {
        padding: 12px 20px;
        background-color: #2980b9;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      button:hover {
        background-color: #1c598a;
      }
      .alert {
        padding: 10px;
        margin-top: 15px;
        color: rgb(4, 129, 8);
        border-radius: 5px;
        text-align: center;
      }
      form a {
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <nav>
      <h1>Settings</h1>
      <div class="nav-actions">
        <a href="/dashboard" class="dashboard-link">Dashboard</a>
        <a href="/logout" class="logout-link">Logout</a>
      </div>
    </nav>
    <form action="/settings" method="POST">
      <label for="expiry_time">Expiry Time (hours):</label>
      <input
        type="number"
        name="expiry_time"
        id="expiry_time"
        value="<%= settings.expiry_time %>"
        required
      />

      <label for="voucher_width">Voucher Width (mm):</label>
      <input
        type="number"
        step="0.1"
        name="voucher_width"
        id="voucher_width"
        value="<%= settings.voucher_width %>"
        required
      />

      <label for="voucher_height">Voucher Height (mm):</label>
      <input
        type="number"
        step="0.1"
        name="voucher_height"
        id="voucher_height"
        value="<%= settings.voucher_height %>"
        required
      />

      <label for="title_font_size">Title Font Size:</label>
      <input
        type="number"
        name="title_font_size"
        id="title_font_size"
        value="<%= settings.title_font_size %>"
        required
      />

      <label for="text_font_size">Text Font Size:</label>
      <input
        type="number"
        name="text_font_size"
        id="text_font_size"
        value="<%= settings.text_font_size %>"
        required
      />

      <button type="submit">Save Settings</button>

      <% if (message) { %>
      <div class="alert"><%= message %></div>
      <% } %>
    </form>
  </body>
</html>
